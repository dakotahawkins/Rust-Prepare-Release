# Suppress: EC112
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
max_line_length = off
trim_trailing_whitespace = true

[prepare-release]
max_line_length = 100

# https://marketplace.visualstudio.com/items?itemName=PaulHarrington.EditorGuidelines
guidelines = 100
guidelines_style = 1px dotted gray

[*.md]
trim_trailing_whitespace = false
